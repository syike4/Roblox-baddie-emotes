-- Idle animation (separate, not in the toggle list)
local idleAnimation = {
    name = "Idle Animation",
    animationId = "86386024192162",
    isToggled = true,
    animTrack = nil,
    isIdle = true
}

-- Helper function for smooth tweens
local function smoothTween(obj, time, props)
    TweenService:Create(obj, TweenInfo.new(time, Enum.EasingStyle.Sine, Enum.EasingDirection.Out), props):Play()
end

-- Stop ALL other animations (and sound if needed)
local function stopAllAnimations(exceptToggle)
    for _, t in ipairs(toggles) do
        if t ~= exceptToggle then
            t.isToggled = false
            if t.animTrack then
                t.animTrack:Stop(0.2)
                t.animTrack:Destroy()
                t.animTrack = nil
            end
            if t.hasSound and needyShakeSound.Playing then
                needyShakeSound:Stop()
            end
            if t.label and t.dotGradient then
                smoothTween(t.label, 0.3, {TextColor3 = Color3.fromRGB(200, 200, 200)})
                t.dotGradient.Color = offSequence
            end
        end
    end
end

local function toggleAnimation(toggle)
    local character = player.Character
    if not character then return end
    local humanoid = character:FindFirstChildOfClass("Humanoid")
    if not humanoid or not humanoid:FindFirstChild("Animator") then return end
    
    if toggle.animTrack then
        toggle.animTrack:Stop(0.2)
        toggle.animTrack:Destroy()
        toggle.animTrack = nil
    end
    
    if toggle.isToggled then
        stopAllAnimations(toggle)
        for _, track in pairs(humanoid:GetPlayingAnimationTracks()) do
            track:Stop(0.2)
        end
        
        local animation = Instance.new("Animation")
        animation.AnimationId = "rbxassetid://" .. toggle.animationId
        toggle.animTrack = humanoid:LoadAnimation(animation)
        toggle.animTrack.Looped = toggle.looped ~= false
        toggle.animTrack:Play(0.2)
        
        if toggle.hasSound then
            needyShakeSound:Play()
        end
        
        if toggle.looped == false then
            toggle.animTrack.Stopped:Connect(function()
                if toggle.isToggled then
                    toggle.isToggled = false
                    if toggle.label and toggle.dotGradient then
                        smoothTween(toggle.label, 0.3, {TextColor3 = Color3.fromRGB(200, 200, 200)})
                        t.dotGradient.Color = offSequence
                    end
                end
            end)
        end
    else
        if toggle.hasSound and needyShakeSound.Playing then
            needyShakeSound:Stop()
        end
    end
end

-- Create toggle buttons INSIDE scroller
for i, toggle in ipairs(toggles) do
    local toggleButton = Instance.new("TextButton")
    toggleButton.Name = toggle.name .. "Button"
    toggleButton.Size = UDim2.new(1, -10, 0, isMobile and 34 or 40)
    toggleButton.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    toggleButton.BackgroundTransparency = 1
    toggleButton.BorderSizePixel = 0
    toggleButton.Text = ""
    toggleButton.AutoButtonColor = false
    toggleButton.LayoutOrder = i
    toggleButton.Parent = scrollingFrame

    local buttonCorner = Instance.new("UICorner")
    buttonCorner.CornerRadius = UDim.new(0, 8)
    buttonCorner.Parent = toggleButton

    local buttonGradient = Instance.new("UIGradient")
    buttonGradient.Color = ColorSequence.new(Color3.fromRGB(0, 0, 0), Color3.fromRGB(200, 200, 200))
    buttonGradient.Rotation = 90
    buttonGradient.Parent = toggleButton

    local buttonStroke = Instance.new("UIStroke")
    buttonStroke.Color = Color3.fromRGB(0, 0, 0)
    buttonStroke.Transparency = 1
    buttonStroke.Thickness = 1
    buttonStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
    buttonStroke.Parent = toggleButton

    local toggleLabel = Instance.new("TextLabel")
    toggleLabel.Name = "ToggleLabel"
    toggleLabel.Size = UDim2.new(1, -30, 1, 0)
    toggleLabel.Position = UDim2.new(0, 8, 0, 0)
    toggleLabel.BackgroundTransparency = 1
    toggleLabel.Text = toggle.name
    toggleLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
    toggleLabel.TextSize = isMobile and 13 or 14
    toggleLabel.Font = Enum.Font.GothamSemibold
    toggleLabel.TextXAlignment = Enum.TextXAlignment.Left
    toggleLabel.TextYAlignment = Enum.TextYAlignment.Center
    toggleLabel.TextTransparency = 1
    toggleLabel.Parent = toggleButton
    toggle.label = toggleLabel

    local toggleDot = Instance.new("Frame")
    toggleDot.Name = "ToggleDot"
    toggleDot.Size = UDim2.new(0, 12, 0, 12)
    toggleDot.Position = UDim2.new(1, -20, 0.5, -6)
    toggleDot.BackgroundColor3 = Color3.new(1, 1, 1)
    toggleDot.BorderSizePixel = 0
    toggleDot.BackgroundTransparency = 1
    toggleDot.Parent = toggleButton
    toggle.dot = toggleDot

    local toggleDotCorner = Instance.new("UICorner")
    toggleDotCorner.CornerRadius = UDim.new(1, 0)
    toggleDotCorner.Parent = toggleDot

    local toggleDotGradient = Instance.new("UIGradient")
    toggleDotGradient.Color = offSequence
    toggleDotGradient.Rotation = 90
    toggleDotGradient.Parent = toggleDot
    toggle.dotGradient = toggleDotGradient

    local function handleToggle()
        toggle.isToggled = not toggle.isToggled
        local targetTextColor = toggle.isToggled and Color3.fromRGB(76, 209, 55) or Color3.fromRGB(200, 200, 200)
        local targetSequence = toggle.isToggled and onSequence or offSequence
        local startSequence = toggleDotGradient.Color
        
        smoothTween(toggleLabel, 0.35, {TextColor3 = targetTextColor, TextTransparency = 0})
        smoothTween(toggleButton, 0.35, {BackgroundTransparency = 0.4})
        smoothTween(buttonStroke, 0.35, {Transparency = 0.6})
        smoothTween(toggleDot, 0.35, {BackgroundTransparency = 0.3})
        
        local tweenTime = 0.35
        local startTime = tick()
        local connection
        connection = RunService.RenderStepped:Connect(function()
            local elapsed = tick() - startTime
            local alpha = math.clamp(elapsed / tweenTime, 0, 1)
            local lerpedColor1 = startSequence.Keypoints[1].Value:Lerp(targetSequence.Keypoints[1].Value, alpha)
            local lerpedColor2 = startSequence.Keypoints[2].Value:Lerp(targetSequence.Keypoints[2].Value, alpha)
            toggleDotGradient.Color = ColorSequence.new(lerpedColor1, lerpedColor2)
            if alpha >= 1 then
                connection:Disconnect()
            end
        end)
        
        toggleAnimation(toggle)
    end

    toggleButton.Activated:Connect(handleToggle)

    toggleButton.MouseEnter:Connect(function()
        local hoverTextColor = toggle.isToggled and Color3.fromRGB(120, 255, 100) or Color3.fromRGB(230, 230, 230)
        smoothTween(toggleLabel, 0.2, {TextColor3 = hoverTextColor})
        smoothTween(toggleButton, 0.2, {BackgroundTransparency = 0.25})
        smoothTween(toggleDot, 0.2, {BackgroundTransparency = 0.1})
    end)

    toggleButton.MouseLeave:Connect(function()
        local targetTextColor = toggle.isToggled and Color3.fromRGB(76, 209, 55) or Color3.fromRGB(200, 200, 200)
        smoothTween(toggleLabel, 0.2, {TextColor3 = targetTextColor})
        smoothTween(toggleButton, 0.2, {BackgroundTransparency = 0.4})
        smoothTween(toggleDot, 0.2, {BackgroundTransparency = 0.3})
    end)
end

-- Update canvas size when list changes
listLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
    scrollingFrame.CanvasSize = UDim2.new(0, 0, 0, listLayout.AbsoluteContentSize.Y + 10)
end)

-- Menu toggle with smooth animations
local menuVisible = false
local function toggleMenu()
    menuVisible = not menuVisible
    
    if menuVisible then
        containerFrame.Visible = true
        smoothTween(containerFrame, 0.4, {BackgroundTransparency = 0.15})
        smoothTween(containerGradient, 0.4, {Rotation = 90})
        smoothTween(containerStroke, 0.4, {Transparency = 0.4})
        
        -- Animate all toggle buttons in
        for _, toggle in ipairs(toggles) do
            local button = scrollingFrame:FindFirstChild(toggle.name .. "Button")
            if button then
                local buttonStroke = button:FindFirstChildOfClass("UIStroke")
                smoothTween(button, 0.35, {BackgroundTransparency = 0.4})
                if buttonStroke then
                    smoothTween(buttonStroke, 0.35, {Transparency = 0.6})
                end
                smoothTween(toggle.label, 0.35, {TextTransparency = 0})
                smoothTween(toggle.dot, 0.35, {BackgroundTransparency = 0.3})
            end
        end
    else
        -- Animate all out smoothly
        for _, toggle in ipairs(toggles) do
            local button = scrollingFrame:FindFirstChild(toggle.name .. "Button")
            if button then
                local buttonStroke = button:FindFirstChildOfClass("UIStroke")
                smoothTween(button, 0.35, {BackgroundTransparency = 1})
                if buttonStroke then
                    smoothTween(buttonStroke, 0.35, {Transparency = 1})
                end
                smoothTween(toggle.label, 0.35, {TextTransparency = 1})
                smoothTween(toggle.dot, 0.35, {BackgroundTransparency = 1})
            end
        end
        
        smoothTween(containerFrame, 0.4, {BackgroundTransparency = 1})
        smoothTween(containerStroke, 0.4, {Transparency = 1})
        
        task.delay(0.45, function()
            containerFrame.Visible = false
        end)
    end
end

mainToggleButton.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        toggleMenu()
    end
end)

mainToggleButton.MouseEnter:Connect(function()
    smoothTween(mainToggleButton, 0.25, {BackgroundTransparency = 0.1})
    smoothTween(mainToggleStroke, 0.25, {Transparency = 0.2})
end)

mainToggleButton.MouseLeave:Connect(function()
    smoothTween(mainToggleButton, 0.25, {BackgroundTransparency = 0.3})
    smoothTween(mainToggleStroke, 0.25, {Transparency = 0.6})
end)

-- Monitor player movement for idle animation (SMOOTHED)
RunService.RenderStepped:Connect(function()
    local character = player.Character
    if not character then return end
    
    local humanoid = character:FindFirstChildOfClass("Humanoid")
    if not humanoid or not idleAnimation.animTrack then return end
    
    local hasActiveToggle = false
    for _, toggle in ipairs(toggles) do
        if toggle.isToggled and toggle.animTrack and toggle.animTrack.IsPlaying then
            hasActiveToggle = true
            break
        end
    end
    
    local isJumping = humanoid:GetState() == Enum.HumanoidStateType.Jumping or 
                      humanoid:GetState() == Enum.HumanoidStateType.Freefall or
                      humanoid:GetState() == Enum.HumanoidStateType.Flying
    
    if not hasActiveToggle then
        if humanoid.MoveDirection.Magnitude == 0 and not isJumping then
            if not idleAnimation.animTrack.IsPlaying then
                idleAnimation.animTrack:Play(0.2)
            end
        else
            if idleAnimation.animTrack.IsPlaying then
                idleAnimation.animTrack:Stop(0.2)
            end
        end
    else
        if idleAnimation.animTrack.IsPlaying then
            idleAnimation.animTrack:Stop(0.2)
        end
    end
end)

player.CharacterAdded:Connect(function(character)
    local humanoid = character:WaitForChild("Humanoid")
    humanoid:WaitForChild("Animator")
    
    -- Setup idle animation
    local idleAnim = Instance.new("Animation")
    idleAnim.AnimationId = "rbxassetid://" .. idleAnimation.animationId
    idleAnimation.animTrack = humanoid:LoadAnimation(idleAnim)
    idleAnimation.animTrack.Priority = Enum.AnimationPriority.Idle
    idleAnimation.animTrack.Looped = true
    
    -- Reactivate any toggled animations
    for _, toggle in ipairs(toggles) do
        if toggle.isToggled then
            toggleAnimation(toggle)
        end
    end
end)

-- Initial setup if character already exists
if player.Character then
    local humanoid = player.Character:WaitForChild("Humanoid")
    humanoid:WaitForChild("Animator")
    
    local idleAnim = Instance.new("Animation")
    idleAnim.AnimationId = "rbxassetid://" .. idleAnimation.animationId
    idleAnimation.animTrack = humanoid:LoadAnimation(idleAnim)
    idleAnimation.animTrack.Priority = Enum.AnimationPriority.Idle
    idleAnimation.animTrack.Looped = true
    
    for _, toggle in ipairs(toggles) do
        if toggle.isToggled then
            toggleAnimation(toggle)
        end
    end
end
